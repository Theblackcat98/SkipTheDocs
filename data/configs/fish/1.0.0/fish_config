# Fish configuration

# Set greeting
set -g fish_greeting

# Set theme
set -g fish_color_autosuggestion 555
set -g fish_color_command green
set -g fish_color_error red
set -g fish_color_param 333
set -g fish_color_search_match --background=blue

# Aliases
alias ls "ls -p"
alias ll "ls -l"
alias la "ls -la"
alias vim "nvim"

# Set editor
set -g EDITOR nvim
set -g VISUAL nvim

# Path
set -g fish_user_paths "/usr/local/sbin" "/usr/local/bin" "/usr/sbin" "/usr/bin" "/sbin" "/bin"
